<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <?xml version="1.0" encoding="utf-8"?>
    <?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <?xml version="1.0" encoding="utf-8"?>
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center_horizontal"
            android:background="#FFF8F1">


            <TextView
                android:id="@+id/tvNombrePlato"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LasaÃ±a de Pollo"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#222222"
                android:layout_marginBottom="16dp" />


            <ImageView
                android:id="@+id/imgPlato"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/ic_lasagna"
            android:layout_marginBottom="24dp"
            android:contentDescription="Imagen del plato" />


            <TextView
                android:id="@+id/tvEstado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Estado: Hecho, Su comida esta en camino"
                android:textColor="#FF5722"
                android:textSize="16sp"
                android:layout_marginBottom="32dp" />


            <Button
                android:id="@+id/btnEntregar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Marcar como Entregado"
                android:backgroundTint="#4CAF50"
                android:textColor="#FFFFFF"
                android:padding="12dp" />
        </LinearLayout>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>